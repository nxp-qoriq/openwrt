From 3942a0b097a8cbef752b67a6c334aa229a8f843a Mon Sep 17 00:00:00 2001
From: Pankit Garg <pankit.garg@nxp.com>
Date: Fri, 3 Jul 2020 17:43:26 +0530
Subject: [PATCH 05/22] dts: ls1046awrdb: Add nodes for Ethernet

Add nodes for ethernet and modify node of I2C

Signed-off-by: Pankit Garg <pankit.garg@nxp.com>
---
 .../boot/dts/freescale/fsl-ls1046a-wrdb.dts   | 59 ++++++++++++++++---
 1 file changed, 51 insertions(+), 8 deletions(-)

diff --git a/arch/arm64/boot/dts/freescale/fsl-ls1046a-wrdb.dts b/arch/arm64/boot/dts/freescale/fsl-ls1046a-wrdb.dts
index 9fb9f34c1011..e954f6eb70cd 100644
--- a/arch/arm64/boot/dts/freescale/fsl-ls1046a-wrdb.dts
+++ b/arch/arm64/boot/dts/freescale/fsl-ls1046a-wrdb.dts
@@ -65,19 +65,13 @@
 			#size-cells = <0>;
 			reg = <0>;
 
-			temperature-sensor@4c {
-				compatible = "nxp,sa56004";
-				reg = <0x4c>;
-				vcc-supply = <&sb_3v3>;
-			};
-
 			eeprom@57 {
 				compatible = "atmel,24c02";
 				reg = <0x57>;
 			};
 		};
 
-	i2c@1 {
+		i2c@1 {
 			#address-cells = <1>;
 			#size-cells = <0>;
 			reg = <1>;
@@ -88,11 +82,17 @@
 				shunt-resistor = <1000>;
 			};
 
+			temperature-sensor@4c {
+				compatible = "nxp,sa56004";
+				reg = <0x4c>;
+				vcc-supply = <&sb_3v3>;
+			};
+
 			rtc@51 {
 				compatible = "nxp,pcf2129";
 				reg = <0x51>;
 			};
-	};
+		};
 	};
 };
 
@@ -121,3 +121,46 @@
 };
 
 #include "fsl-ls1046-post.dtsi"
+
+&fman0 {
+	ethernet@e4000 {
+                phy-handle = <&rgmii_phy1>;
+                phy-connection-type = "rgmii";
+        };
+
+	ethernet@e8000 {
+                phy-handle = <&sgmii_phy1>;
+                phy-connection-type = "sgmii";
+        };
+
+	ethernet@ea000 {
+                phy-handle = <&sgmii_phy2>;
+                phy-connection-type = "sgmii";
+        };
+
+	ethernet@f2000 {
+		phy-handle = <&aqr113c_phy1>;
+		phy-connection-type = "xfi";
+	};
+
+	mdio@fc000 {
+                rgmii_phy1: ethernet-phy@1 {
+                        reg = <0x1>;
+                };
+
+                sgmii_phy1: ethernet-phy@2 {
+                        reg = <0x2>;
+                };
+
+                sgmii_phy2: ethernet-phy@2 {
+                        reg = <0x3>;
+                };
+        };
+
+	mdio@fd000 {
+		aqr113c_phy1: ethernet-phy@0 {
+			compatible = "ethernet-phy-ieee802.3-c45";
+			reg = <0x0>;
+		};
+	};
+};
